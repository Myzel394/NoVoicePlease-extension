{
  "manifest_version": 2,
  "icons": { "128": "assets/images/icon.png" },
  "browser_action": {
    "default_icon": "assets/images/icon.png"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "browser-polyfill.js",
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "html/options.html",
  "permissions": [
    "tabs",
    "background",
    "downloads"
  ],
  "web_accessible_resources": [ "js/*", "html/*", "assets/*" ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "name": "<%= package.name %>",
  "version": "<%= package.version %>",
  "description": "<%= package.description %>"
}
