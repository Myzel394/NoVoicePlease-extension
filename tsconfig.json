{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "ES2017",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "lib": [
            "DOM",
            "ESNext",
            "DOM.Iterable",
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}
